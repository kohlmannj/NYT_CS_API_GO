{
  "git.ignoreLimitWarning": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "static/js/**/*.js": true
  },
  /** @see https://github.com/Microsoft/vscode-eslint/issues/284#issuecomment-325913370 */
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    { "language": "typescript", "autoFix": true },
    { "language": "typescriptreact", "autoFix": true }
  ],
}
